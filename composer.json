{
  "name": "cleytonbonamigo/share-twitter",
  "description": "PHP Client to share a Twitter with Media images",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1",
    "vlucas/phpdotenv": "^5.5"
  },
  "autoload": {
    "psr-4": {
      "CleytonBonamigo\\ShareTwitter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CleytonBonamigo\\ShareTwitter\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Cleyton Bonamigo",
      "email": "cleytonbonamigo@gmail.com"
    }
  ],
  "scripts": {
    "test": "vendor/bin/phpunit --bootstrap vendor/autoload.php --configuration phpunit.xml --testsuite main"
  },
  "scripts-descriptions": {
    "test": "Run PHPUnit tests"
  }
}
